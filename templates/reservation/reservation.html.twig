{% extends 'base.html.twig' %}

{% block title %}Réserver{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <h1 class="text-center headline m-4">Réservation</h1>
            </div>
        </div>
        {{ form_start(reservationForm, { attr: { id : 'reservation_form' } }) }}
        <div class="row justify-content-center">
            <div class="col-md-4">
                {{ form_row(reservationForm.firstName) }}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4">
                {{ form_row(reservationForm.lastName) }}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4">
                {{ form_row(reservationForm.date) }}
            </div>
        </div>

        <div class="row justify-content-center" id="hour">
            <div class="col-md-4">
                {{ form_row(reservationForm.time) }}
            </div>
        </div>
        <div class="row justify-content-center hidden" id="number">
            <div class="col-md-4">
                {{ form_row(reservationForm.guestNumber) }}
            </div>
        </div>
        <div class="row justify-content-center hidden" id="contact">
            <div class="col-md-4">
                {{ form_row(reservationForm.guestEmail) }}
                <button type="submit" class="btn btn-primary btn-lg mt-2">Réserver</button>
            </div>
        </div>
        {{ form_end(reservationForm) }}
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('reservationHour') }}
{% endblock %}